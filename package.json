{
  "name": "ticket-purchasing",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=19.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "classnames": "^2.3.2",
    "concurrently": "^8.2.1",
    "cors": "^2.8.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-intl": "^6.4.7",
    "react-router-dom": "^6.16.0",
    "react-scripts": "5.0.1",
    "sass": "^1.68.0",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "concurrently \"nodemon server/index.js\" \"react-scripts start\"",
    "start:server": "nodemon server/index.js",
    "build": "npm i && react-scripts build",
    "test": "react-scripts test --watchAll --coverage=true --runInBand --detectOpenHandles",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.3",
    "@types/react": "^18.2.22",
    "@types/react-dom": "^18.2.7",
    "body-parser": "^1.20.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "nodemon": "^3.0.1",
    "typescript": "^4.0.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.tsx",
      "src/components/*.tsx",
      "!**/node_modules/**",
      "!**/src/setupTests.js",
      "!**/src/routes/index.tsx",
      "!**/src/components/index.tsx",
      "!**/src/index.tsx"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    }
  }
}
